<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:FIFOCalculator.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FIFOCalculator.Views.ReadOnlyEntryView" x:CompileBindings="True" x:DataType="viewModels:EntryViewModel">
  <StackPanel Orientation="Horizontal" Spacing="10">
      <TextBlock Text="{Binding When, StringFormat='{}{0:g}'}" />
      <TextBlock Text="{Binding Units}" />
      <TextBlock Text="{Binding PricePerUnit, StringFormat='{}{0:C}'}" />
  </StackPanel>
</UserControl>
